<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_carSettings" >
        <ListPreference
            android:title="@string/settings_radioType"
            android:summary="@string/settings_radioType_summ"
            android:key="radioType"
            android:entries="@array/settings_radioType_options"
            android:entryValues="@array/settings_radioType_options"
            android:defaultValue="BM53" />
        <CheckBoxPreference
            android:title="@string/settings_navAvailable"
            android:summary="@string/settings_navAvailable_summ"
            android:key="navAvailable"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:title="@string/settings_soneAvailable"
            android:summary="@string/settings_soneAvailable_summ"
            android:key="stealthOneAvailable"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_personalize">
        <CheckBoxPreference
            android:title="@string/settings_changeTextColor"
            android:summary="@string/settings_changeTextColor_summ"
            android:key="nightColorsWithInterior"
            android:defaultValue="false" />
        <ListPreference
            android:title="@string/settings_mflMediaButton"
            android:summary="@string/settings_mflMediaButton_summ"
            android:key="mflMediaButton"
            android:entries="@array/settings_mflMediaButton_options"
            android:entryValues="@array/settings_mflMediaButton_options_values"
            android:defaultValue="PRESS" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_carValueSettings">
        <com.ibus.droidibus.activity.preferences.TimePreference
            android:key="obcTime"
            android:defaultValue="00:00"
            android:summary="@string/settings_time_summ"
            android:title="@string/settings_time" />
        <com.ibus.droidibus.activity.preferences.DatePreference
            android:key="obcDate"
            android:summary="@string/settings_date_summ"
            android:title="@string/settings_date" />
        <Preference
            android:key="syncDateTime" 
            android:summary="@string/settings_datetime_sync_summ"
            android:title="@string/settings_datetime_sync" /> 
        <ListPreference
            android:title="@string/settings_timeUnit"
            android:summary="@string/settings_timeUnit_summ"
            android:key="timeUnit"
            android:entries="@array/settings_timeUnit_options"
            android:entryValues="@array/settings_timeUnit_options_values"
            android:defaultValue="0" />
        <ListPreference
            android:title="@string/settings_distanceUnit"
            android:summary="@string/settings_distanceUnit_summ"
            android:key="distanceUnit"
            android:entries="@array/settings_distanceUnit_options"
            android:entryValues="@array/settings_distanceUnit_options_values"
            android:defaultValue="1" />
        <ListPreference
            android:title="@string/settings_speedUnit"
            android:summary="@string/settings_speedUnit_summ"
            android:key="speedUnit"
            android:entries="@array/settings_speedUnit_options"
            android:entryValues="@array/settings_speedUnit_options_values"
            android:defaultValue="1" />
        <ListPreference
            android:title="@string/settings_temperatureUnit"
            android:summary="@string/settings_temperatureUnit_summ"
            android:key="temperatureUnit"
            android:entries="@array/settings_temperatureUnit_options"
            android:entryValues="@array/settings_temperatureUnit_options_values"
            android:defaultValue="1" />
        <ListPreference
            android:title="@string/settings_consumptionUnit"
            android:summary="@string/settings_consumptionUnit_summ"
            android:key="consumptionUnit"
            android:entries="@array/settings_consumptionUnit_options"
            android:entryValues="@array/settings_consumptionUnit_options_values"
            android:defaultValue="01" />
    </PreferenceCategory>
</PreferenceScreen>