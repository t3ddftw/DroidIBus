<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="CustomActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:displayOptions">useLogo</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:height">45dp</item>
    </style>

    <style name="mediaBtn">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="majorStatItemLabelText">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="majorStatItemValueText">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="statItemLayout">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="statItemLabelText">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="statItemValueText">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="statItemUnit">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="geoItemText">
        <item name="android:textSize">22.5sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">2.5dp</item>
    </style>
</resources>